<Window x:Class="hello_world.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hello_world"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="200" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="6,10,0,0" TextWrapping="Wrap" Text="do you want me to say hello world?" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button x:Name="yes" Content="yes" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top" Width="50" Click="YES_Button_Click" Grid.Column="1"/>
        <Button x:Name="no" Content="no" HorizontalAlignment="Left" Margin="33,45,0,0" VerticalAlignment="Top" Width="50" Click="NO_Button_Click"/>
    </Grid>
</Window>
